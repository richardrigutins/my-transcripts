@using Rigutins.MyTranscripts.Server.Data;

@if (Transcripts.Count() == 0)
{
    <div class="row">
        <div class="col-12">
            <p class="lead">
                You don't have any transcripts yet.
            </p>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var transcript in Transcripts)
        {
            <div class="col-xl-3 col-sm-6 mb-4">
                <TranscriptCard Transcript="transcript" OnRemove="OnRemoveTranscript" OnSave="OnSaveTranscript"  />
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public List<Transcript> Transcripts { get; set; } = new();

    [Parameter]
    public Action<Transcript>? OnSaveTranscript { get; set; }

    [Parameter]
    public Action<Transcript>? OnRemoveTranscript { get; set; }
}
