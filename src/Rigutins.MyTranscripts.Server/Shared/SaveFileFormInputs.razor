@using Rigutins.MyTranscripts.Server.Data;

<div class="mb-4">
    <div class="input-group">
        <InputText class="form-control" placeholder="File name" @bind-Value="Model.Name" required />
        <div class="input-group-append">
            <span class="input-group-text">.txt</span>
        </div>
    </div>
    <ValidationMessage For="() => Model.Name" class="text-danger" />
</div>

<div class="mb-4">
    <label for="set-reminder">Set a reminder to review content?</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text p-3">
                <InputCheckbox @bind-Value="Model.SetReminder" aria-label="Set reminder" />
            </div>
        </div>
        <InputDate id="set-reminder" class="form-control" @bind-Value="Model.ReminderDate" disabled="@(!Model.SetReminder)" />
    </div>
    <ValidationMessage For="() => Model.ReminderDate" class="text-danger" />
</div>

@code {
    [Parameter]
    public SaveFileFormData Model { get; set; } = new();
}
