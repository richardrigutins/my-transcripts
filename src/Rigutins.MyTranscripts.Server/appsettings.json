{
    "AzureAd": {
        "Instance": "https://login.microsoftonline.com/",
        "TenantId": "common",
        "ClientId": "{YOUR_CLIENT_ID}",
        "ClientSecret": "{YOUR_CLIENT_SECRET}",
        "ClientCertificates": [],
        "CallbackPath": "/signin-oidc"
    },
    "DownstreamApi": {
        "BaseUrl": "https://graph.microsoft.com/v1.0",
        "Scopes": "User.Read User.ReadBasic.All Tasks.ReadWrite Files.ReadWrite"
    },
    "KeyVaultName": "", // Optional
    "SpeechRecognition": {
        "Region": "{YOUR_SPEECH_SERVICE_REGION}",
        "SubscriptionKey": "{YOUR_SPEECH_SERVICE_SUBSCRIPTION_KEY}"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}
